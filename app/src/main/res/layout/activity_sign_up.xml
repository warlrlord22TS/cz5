<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUP">
    <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText7" android:layout_marginBottom="404dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.541" android:hint="Password"
            app:layout_constraintHorizontal_bias="0.477"/>
    <TextView
            android:layout_width="175dp"
            android:layout_height="42dp"
            android:text="MobiCafe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="20dp" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.057" android:textStyle="bold" android:textAlignment="center"
            android:textSize="30sp" android:textColor="#425BEE" android:id="@+id/textView2"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="49dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="548dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintVertical_bias="0.127" android:hint="Login ID"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText6" android:layout_marginBottom="340dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.421" android:hint="Confirm Password"
            app:layout_constraintHorizontal_bias="0.47"/>
    <Button
            android:text="SignUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText5" android:layout_marginBottom="240dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.34"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText7" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.477"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" android:hint="Mobil Number"/>
</androidx.constraintlayout.widget.ConstraintLayout>